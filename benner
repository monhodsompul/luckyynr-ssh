# Define color codes
RED='\033[0;31m'
WHITE='\033[0;37m'
BLUE='\033[0;34m'
YELLOW='\033[0;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo -e "${RED}██████╗ ${WHITE}███████╗${BLUE}██╗  ██╗ ${YELLOW}██╗ ${GREEN}██████╗ ██████╗ ██╗  ██╗${NC}"
echo -e "${RED}██╔══██╗${WHITE}██╔════╝${BLUE}╚██╗██╔╝${YELLOW}███║${GREEN}██╔═████╗╚════██╗██║  ██║${NC}"
echo -e "${RED}██████╔╝${WHITE}█████╗   ${BLUE}╚███╔╝ ${YELLOW}╚██║${GREEN}██║██╔██║ █████╔╝███████║${NC}"
echo -e "${RED}██╔══██╗${WHITE}██╔══╝   ${BLUE}██╔██╗  ${YELLOW}██║${GREEN}████╔╝██║██╔═══╝ ╚════██║${NC}"
echo -e "${RED}██║  ██║${WHITE}███████╗${BLUE}██╔╝ ██╗ ${YELLOW}██║${GREEN}╚██████╔╝███████╗     ██║${NC}"
echo -e "${RED}╚═╝  ╚═╝${WHITE}╚══════╝${BLUE}╚═╝  ╚═╝ ${YELLOW}╚═╝ ${GREEN}╚═════╝ ╚══════╝     ╚═╝${NC}"
                                                     

# Add the "Created by luckynr" text with gradient effect
echo -e "${RED}C${WHITE}r${BLUE}e${YELLOW}a${GREEN}t${RED}e${WHITE}d ${BLUE}b${YELLOW}y ${GREEN}l${RED}u${WHITE}c${BLUE}k${YELLOW}y${GREEN}n${RED}r${NC}"
